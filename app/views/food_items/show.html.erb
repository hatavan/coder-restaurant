
<div class="card">
  <%= image_tag @food_item.image_url_or_default, class: "card-img-top", alt: "#{@food_item.name}" %>
  <div class="card-block">
    <h5 class="card-title"><%= @food_item.name %></h5>
    <div class="card-text">
      <%= @food_item.description %>
    </div>
  </div>
  <div class="card-footer">
      <div class="row">
        <div class="col-md-8"><span class="badge badge-pill badge-danger"><%= @food_item.price %> VND</span> <small class="badge badge-info"><%= @food_item.section.name %></small></div>
        <div class="col-md-4 text-right">
        <%= link_to(orders_new_path(food: @food_item.id)) do %>
          <button class="btn btn-sm btn-primary">Order</button></div>
        <% end %>
      </div>
    </div>
</div>
<%= link_to 'Back', menu_path %>
